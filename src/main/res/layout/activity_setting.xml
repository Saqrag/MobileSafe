<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:bug="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        style="@style/TopBar"
        android:text="设置中心"/>

    <com.bug.mobilesafe.views.CheckBoxItem
        android:id="@+id/cbi_autoupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bug:title="自动更新"
        bug:desc_on="自动更新已开启"
        bug:desc_off="自动更新已关闭"
        bug:checked="false"/>
    <com.bug.mobilesafe.views.CheckBoxItem
        android:id="@+id/cbi_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bug:title="电话归属地显示设置"
        bug:desc_on="电话归属地显示已开启"
        bug:desc_off="电话归属地显示已关闭"
        bug:checked="false"/>

    <com.bug.mobilesafe.views.ClickItem
        android:id="@+id/ci_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bug:desc="默认"
        bug:title="归属地提示框风格" />

    <com.bug.mobilesafe.views.ClickItem
        android:id="@+id/ci_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bug:desc="设置归属地提示框显示位置"
        bug:title="归属地提示框显示位置" />
    <com.bug.mobilesafe.views.CheckBoxItem
        android:id="@+id/cbi_BlackList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bug:title="黑名单拦截设置"
        bug:desc_on="黑名单拦截已开启"
        bug:desc_off="黑名单拦截已关闭"
        bug:checked="false"/>

</LinearLayout>
