<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TopBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:background">#6cd8f5</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="widget_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
    </style>


    <style name="normalTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:text="下一页"-->
    <!--android:textColor="#000"-->
    <!--android:textSize="20dp"-->
    <!--android:drawableRight="@drawable/next"/>-->

    <style name="previousButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:text">上一页</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:background">@drawable/selector_btn_function</item>
        <item name="android:onClick">previous</item>
    </style>

    <style name="nextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:text">下一页</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:background">@drawable/selector_btn_function</item>
        <item name="android:onClick">next</item>
    </style>

</resources>
